using System;
class HelloWorld {
  static void Main() {
      int n,old=0,current=1,next=0;
      Console.WriteLine("enter upto which fibonacci need to printed: ");
      n=Convert.ToInt32(Console.ReadLine());
      Console.Write(old+"");
      while(next<=n)
      {
       next=old+current;
       old=current;
       current=next;
       Console.Write(" "+old);
       }
  }
} 

using System;
class HelloWorld {
  static void Main() {
      int i,n,old=0,current=1,next=0;
      Console.WriteLine("enter nth fibonacci number you wanted: ");
      n=Convert.ToInt32(Console.ReadLine());
      if (n==1){
          Console.WriteLine("0");
      }
      else if(n==2){
          Console.WriteLine("1");
      }
      i=3;
      while(i<=n)
      {
       next=old+current;
       old=current;
       current=next;
       if (i==n)
       {
        Console.WriteLine(n+" fibonacci number is: "+current);  
       }
       i++;
       }
  }
} 

using System;
class HelloWorld {
  static void Main() {
    int count=1,n,l1,largest=0;
    Console.WriteLine("enter how many numbers to be accepted");
    n=Convert.ToInt32(Console.ReadLine());
    while(count<=n)
    {
     Console.WriteLine("enter value "+count);
     l1=Convert.ToInt32(Console.ReadLine());
     if (l1>largest)
     {
      largest=l1;
     }
     count++;
    }
    Console.WriteLine("largest number among given is: "+largest);
  }
}


namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int num,half,i,flag;
            Console.WriteLine("enter the number: ");
            num = Convert.ToInt32(Console.ReadLine());
            half = (int)num / 2;
            i = 2;flag = 0;
            while(i<=half)
            {
                if (num % i == 0)
                {
                    Console.WriteLine("It's not prime");
                    flag = 1;
                    break;
                }
                i++;
            }
            if (flag == 0)
            {
                Console.WriteLine("It's prime");
            }

        }
    }
}
