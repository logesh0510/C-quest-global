class HelloWorld {
  static void Main() {
            int units,bill;
            Console.WriteLine("enter the units consumed: ");
            units=Convert.ToInt32(Console.ReadLine());
            if(1<=units && units<=100)
            {
             bill=units*5;
             Console.WriteLine("your bill for "+units+ " is "+bill);
            }
            else if(101<=units && units<=200)
            {
             bill=units*6;
             Console.WriteLine("your bill for "+units+ " is "+bill);
            }
            else if(201<=units && units<=300)
            {
             bill=units*7;
             Console.WriteLine("your bill for "+units+ " is "+bill);
            }
            else
            {
            bill=units*8;
            Console.WriteLine("your bill for "+units+ " is "+bill);
            }

  }
} 

using System;
class HelloWorld {
  static void Main() {
     int h,b,r,option;
     double circle,triangle;
            Console.WriteLine("enter the option: 1 for circle and 2 for triangle area ");
            option=Convert.ToInt32(Console.ReadLine());
            switch (option)
            { 
                case 1:
                    Console.WriteLine("enter the radius: ");
                    r=Convert.ToInt32(Console.ReadLine());
                    circle=3.14 * r *r;
                    Console.WriteLine("circle area is "+circle);
                    break;
                case 2:
                    Console.WriteLine("enter the height: ");
                    h=Convert.ToInt32(Console.ReadLine());
                    Console.WriteLine("enter the base: ");
                    b=Convert.ToInt32(Console.ReadLine());
                    triangle=(h*b)/2.0;
                    Console.WriteLine("triangle area is "+triangle);
                    break;
            }
  }
}

