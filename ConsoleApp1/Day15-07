using System;
class HelloWorld {
  static void Main() {
      int i,n,power,result;
      Console.WriteLine("enter the number: ");
      n=Convert.ToInt32(Console.ReadLine());
      Console.WriteLine("enter the power: ");
      power=Convert.ToInt32(Console.ReadLine());
      i=power;
      result=1;
      while(i>=1)
      {
          result*=n;
          i--;
      }
      
      Console.WriteLine("power "+power+" of "+n+" is: "+result);
  }
}

using System;
class HelloWorld {
  static void Main() {
      int i,table,upto;
      Console.WriteLine("enter the table: ");
      table=Convert.ToInt32(Console.ReadLine());
      Console.WriteLine("enter the upto: ");
      upto=Convert.ToInt32(Console.ReadLine());
      i=1;
      while(i<=upto)
      {
          Console.WriteLine(i+" * "+table+" = "+(i*table));
          i++;
      }
}
}  

using System;
class HelloWorld {
  static void Main() {
      int num,rem,result,temp;
      Console.WriteLine("enter the number: ");
      num=Convert.ToInt32(Console.ReadLine());
      temp=num;
      result=0;
      while(num>0)
      {
        rem=num%10;
        num=num/10;
        result+=(rem*rem*rem);
      }
      if(result==temp)
      {
          Console.WriteLine("it's armstrong");
      }
      else
      {
          Console.WriteLine("it's not armstrong");
      }
}
} 

